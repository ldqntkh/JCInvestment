<%- include('../share_customer/login/header', {"title" : title}); %>
        <div class="container-fluid customer-login">
            <div class="row justify-content-md-center">
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-header-product login-header">
                            <h4 class="card-title">
                                <strong>Sign In</strong><br>
                            </h4>
                        </div>
                        <div class="card-body">
                            <div id="login-alert" class="alert alert-danger col-sm-12"></div>
                            <form id="loginform" class="col-md-12" role="form" method="POST">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="login-username" type="text" class="form-control" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>"  placeholder="Email" required>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input id="login-password" type="password" class="form-control" name="password" placeholder="password" value="<%= typeof password !== 'undefined' ? password : '' %>" required>
                                </div>

                                <% if(typeof errorMessage !== 'undefined' && errorMessage !== '') { %>
                                    <div class="error-message"><%= errorMessage %></div>
                                <% } %>

                                <div class="form-group">
                                    <div class="col-sm-12 controls">
                                        <button id="btn-login" type="submit" class="btn btn-success">Login </button>
                                    </div>
                                </div>
                            </form>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons">account_box</i><a href="/registeraccount">Register</a>
                                    <a href="#" data-toggle="modal" data-target="#forgot-password"><span>Forgot password</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./forgotpassword'); %>
        </div>
    <%- include('../global/footer_UI'); %>

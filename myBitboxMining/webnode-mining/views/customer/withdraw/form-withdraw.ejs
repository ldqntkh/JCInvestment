<%- include('../../share_customer/header'); %>
<%- include('../../share_customer/navbar'); %>
<div class="content" >
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Withdraw ETH</h4>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label>Your total ETH: <strong><%- obj_data.unpaidBalance%> ETH</strong></label>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope color-blue"></i>
                            </span>
                            <input name="total_eth" placeholder="Amount to withdraw" class="form-control" type="input" value="<%- obj_data.total_eth %>" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope color-blue"></i>
                            </span>
                            <textarea rows="5" name="description" placeholder="Note" class="form-control"><%- obj_data.description %></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="note"><%- obj_data.err%></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" value="<%- obj_data.unpaidBalance%>" name="unpaidBalance" />
                        <button type="submit" class="btn btn-lg btn-primary btn-success" value="Submit">Submit</button>
                        <a href='/list-withdraw-eth' class="btn btn-lg btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var pageContext = {
        "page" : "<%- menu_active %>"
    }
</script>

<%- include('../../share_customer/footer'); %>
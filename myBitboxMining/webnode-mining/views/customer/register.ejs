<%- include('../share_customer/login/header', {"title" : title}); %>
    <div class="content">
        <div class="container-fluid register-account-container">
            <div class="row justify-content-md-center">
                <div class="col-md-6 register-account-form">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Register profile</h4>
                            <p class="card-category">Complete your profile</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">(<span class="text-danger">*</span>) is required</div>
                            </div>
                            <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Email address <span class="text-danger">*</span></label>
                                        <input type="email" name="email" class="form-control" maxlength="50" required
                                            value="<%= typeof customer !== 'undefined' ? customer.email : '' %>" />
                                        <% if(typeof errMessage !== 'undefined' && errMessage.email !== null) { %>
                                            <p class="text-danger"><%= errMessage.email %></p>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Full Name <span class="text-danger">*</span></label>
                                        <input type="text" name="fullname" class="form-control" maxlength="50" required
                                            value="<%= typeof customer !== 'undefined' ? customer.fullname : '' %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Password <span class="text-danger">*</span></label>
                                        <input type="password" name="password" class="form-control" min-length="8" maxlength="50" required
                                            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[@!#$%^&])(?=.*[A-Z]).{8,50}$" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Confirm password</label>
                                        <input type="password" name="passwordconfirm" class="form-control" maxlength="50">
                                        <% if(typeof errMessage !== 'undefined' && errMessage.passwordconfirm !== null) { %>
                                            <p class="text-danger"><%= errMessage.passwordconfirm %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="">Birthday</label>
                                        <input type="text" name="birthday" class="form-control" maxlength="50" value="<%= typeof customer !== 'undefined' ? customer.birthday : '' %>"
                                        pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" placeholder="yyyy-mm-dd" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Phone number</label>
                                        <input type="tel" name="phone" class="form-control" maxlength="11" value="<%= typeof customer !== 'undefined' ? customer.phone : '' %>"
                                            pattern="\(?([0-9]{3})\)?([ .-]?)([0-9]{3})\2([0-9]{5})" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 message <%= typeof isError !== 'undefined' && isError ? 'text-danger' : 'text-success' %>">
                                    <span><%= typeof message !== 'undefined' ? message : '' %></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Register</button>
                            <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</body>
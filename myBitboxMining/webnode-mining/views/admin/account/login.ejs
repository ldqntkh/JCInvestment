
<%- include('../../share_customer/login/header', {"title" : title}); %>
    <div class="container-fluid customer-login" id="login-admin">
        <div class="row justify-content-md-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header-product login-header">
                        <h4 class="card-title"><strong><%= language.en.LABEL_LOGIN_TITLE %></strong></h4>
                    </div>
                    <div class="card-body">
                        <div id="login-alert" class="alert alert-danger col-sm-12"></div>
                        <form id="loginform" class="col-md-12" role="form" method="POST">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="login-email" type="email" class="form-control" name="email" placeholder="<%= language.en.LABEL_EMAIL %>" value="<%= typeof email !== 'undefined' ? email : '' %>" required />
                            </div>

                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password" placeholder="<%= language.en.LABEL_PASSWORD %>" required />
                            </div>
                            <div class="form-group">
                                <p class="text-danger"><%= typeof message !== 'undefined' ? message : '' %></p>
                                <div class="col-sm-12 controls">
                                    <button id="btn-login" type="submit" class="btn btn-success"><%= language.en.LABEL_BUTTON_LOGIN %></button>
                                </div>
                            </div>
                        </form>
                        <div class="card-footer">
                            <div class="stats">
                                <a href="#" data-toggle="modal" data-target="#forgot-password">
                                    <span><%= language.en.LABEL_BUTTON_FORGOT_PASSWORD %></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../global/footer_UI'); %>
